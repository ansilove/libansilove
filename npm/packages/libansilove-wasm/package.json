{
	"name": "libansilove",
	"version": "1.4.2",
	"description": "WebAssembly build of libansilove with TypeScript bindings.",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./browser": {
			"import": "./dist/browser.js",
			"types": "./dist/browser.d.ts"
		}
	},
	"files": [
		"dist/index.js",
		"dist/index.d.ts",
		"dist/browser.js",
		"dist/browser.d.ts",
		"dist/libansilove.js",
		"dist/libansilove.wasm",
		"dist/LICENSE"
	],
	"scripts": {
		"clean": "node scripts/clean.mjs",
		"compile": "tsc -p tsconfig.json",
		"copy:wasm": "node scripts/copy-wasm.mjs",
		"build": "npm run clean && npm run compile && npm run copy:wasm",
		"test": "ts-node --project tsconfig.test.json test/render.test.ts",
		"verify:files": "node scripts/verify-dist.mjs",
		"verify:node": "node ../../../scripts/test-wasm-node.js dist",
		"verify": "npm run verify:files && npm run verify:node",
		"prepack": "npm run build && npm run verify && npm test",
		"sync-version": "node scripts/sync-version.mjs",
		"version:patch": "node scripts/sync-version.mjs --bump-patch"
	},
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.0"
	},
	"keywords": [
		"ansi",
		"ansilove",
		"wasm",
		"ansi-art",
		"libansilove"
	],
	"author": "effect-native",
	"license": "BSD-2-Clause",
	"repository": {
		"type": "git",
		"url": "https://github.com/effect-native/libansilove",
		"directory": "npm/libansilove-wasm"
	}
}
